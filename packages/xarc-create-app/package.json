{
  "name": "@xarc/create-app",
  "version": "6.1.2",
  "description": "Create react.js/node.js webapp using the Electrode Platform",
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "webpack",
    "test": "mocha",
    "coverage": "nyc npm test",
    "check": "nyc npm test"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.com/",
    "access": "public"
  },
  "bin": {
    "create-app": "bin/create-app.js"
  },
  "keywords": [
    "electrode",
    "react",
    "node.js",
    "webapp"
  ],
  "files": [
    "bin",
    "dist",
    "lib",
    "template"
  ],
  "author": "Electrode (http://www.electrode.io/)",
  "contributors": [
    "Joel Chen <xchen@walmartlabs.com>"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@xarc/app": "^11.0.0",
    "@xarc/app-dev": "^11.0.0",
    "@xarc/module-dev": "^4.1.0",
    "@xarc/react": "^1.0.0",
    "@xarc/react-query": "^1.0.0",
    "@xarc/react-redux": "^1.0.0",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.6",
    "chalker": "^1.2.0",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "opfs": "^1.1.1",
    "prettier": "^2.7.1",
    "prompts": "^2.4.2",
    "run-verify": "^1.2.6",
    "shcmd": "^0.8.4",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "webpack": "^5.33.2",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "xclap": "^0.2.53"
  },
  "prettier": {
    "printWidth": 100
  },
  "mocha": {
    "require": [
      "./test/setup.js"
    ],
    "recursive": true
  },
  "nyc": {
    "extends": [],
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "*clap.js",
      "*clap.ts",
      "coverage",
      "dist",
      "docs",
      "gulpfile.js",
      "test",
      "xrun*.js",
      "xrun*.ts",
      "template",
      "bin"
    ],
    "check-coverage": false,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": true
  }
}
